{
  "manifest_version": 3,
  "name": "OMNI Fiat to Zcash Price Converter",
  "version": "1.0.0",
  "description": "Converts product prices on any website to Zcash (ZEC) in real-time using live exchange rates.",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://api.coingecko.com/*"],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shared/constants.js", "content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
