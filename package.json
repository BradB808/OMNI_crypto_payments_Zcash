{
  "name": "omni-crypto-payments",
  "version": "1.0.0",
  "description": "Stripe-style payment infrastructure for privacy-preserving cryptocurrency (Bitcoin & Zcash)",
  "main": "dist/api/server.js",
  "scripts": {
    "dev": "tsx watch src/api/server.ts",
    "dev:api": "tsx watch src/api/server.ts",
    "dev:worker:bitcoin": "tsx watch src/workers/bitcoinMonitor.ts",
    "dev:worker:zcash": "tsx watch src/workers/zcashMonitor.ts",
    "dev:worker:conversion": "tsx watch src/workers/conversionWorker.ts",
    "dev:worker:settlement": "tsx watch src/workers/settlementWorker.ts",
    "dev:worker:webhook": "tsx watch src/workers/webhookWorker.ts",
    "workers:dev": "npm-run-all --parallel dev:worker:*",
    "build": "tsc",
    "start": "node dist/api/server.js",
    "start:worker:bitcoin": "node dist/workers/bitcoinMonitor.js",
    "start:worker:zcash": "node dist/workers/zcashMonitor.js",
    "start:worker:conversion": "node dist/workers/conversionWorker.js",
    "start:worker:settlement": "node dist/workers/settlementWorker.js",
    "start:worker:webhook": "node dist/workers/webhookWorker.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "db:migrate": "node -r dotenv/config dist/scripts/migrate.js",
    "db:migrate:rollback": "node -r dotenv/config dist/scripts/migrateRollback.js",
    "db:migration:create": "node -r dotenv/config dist/scripts/createMigration.js",
    "db:seed": "node -r dotenv/config dist/scripts/seed.js",
    "db:reset": "node -r dotenv/config dist/scripts/resetDatabase.js",
    "generate:api-key": "tsx src/scripts/generateApiKey.ts",
    "wallet:setup": "tsx src/scripts/setupWallet.ts",
    "check:nodes": "tsx src/scripts/checkNodes.ts",
    "check:circle": "tsx src/scripts/checkCircle.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cryptocurrency",
    "payment-gateway",
    "bitcoin",
    "zcash",
    "privacy",
    "shielded-transactions",
    "circle",
    "usdc",
    "shopify"
  ],
  "author": "OMNI Crypto Payments",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.5",
    "axios-retry": "^4.0.0",
    "bcrypt": "^5.1.1",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "bs58check": "^2.1.2",
    "bullmq": "^5.1.7",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "tiny-secp256k1": "^2.2.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zeromq": "^6.0.0-beta.20",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "^9.0.7",
    "@types/zeromq": "^5.2.5",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
